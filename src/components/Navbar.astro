---
import { ui } from '@/i18n/ui'
import { getPageInfo } from '@/utils/page'

const { currentLang, isHome, isDarkness, isEmileMoselly, isDarknessTag, isEmileMosellyTag, isAbout, getLocalizedPath } = getPageInfo(Astro.url.pathname)
const currentUI = ui[currentLang as keyof typeof ui] ?? {}

const isPostActive = isHome || isDarkness || isEmileMoselly
const isTagActive = isDarknessTag || isEmileMosellyTag
const isAboutActive = isAbout

function getNavItemClass(isActive: boolean) {
  return isActive
    ? 'highlight-static c-primary font-bold after:bottom-0.7em'
    : 'highlight-hover transition-[colors,font-weight] after:bottom-0.7em hover:(c-primary font-bold)'
}

const navItems = [
  {
    href: '/',
    label: currentUI.darkness || currentUI.emileMoselly,
    className: getNavItemClass(isPostActive),
  },
  {
    href: '/darkness/',
    label: currentUI.darkness,
    className: getNavItemClass(isPostActive),
  },
  {
    href: '/emile-moselly/',
    label: currentUI.emileMoselly,
    className: getNavItemClass(isPostActive),
  },
  {
    href: '/tags/',
    label: currentUI.darknessTags || currentUI.emileMosellyTags,
    className: getNavItemClass(isTagActive),
  },
  {
    href: '/darkness-tags/',
    label: currentUI.darknessTags,
    className: getNavItemClass(isTagActive),
  },
  {
    href: '/emile-moselly-tags/',
    label: currentUI.emileMosellyTags,
    className: getNavItemClass(isTagActive),
  },
  {
    href: '/about/',
    label: currentUI.about,
    className: getNavItemClass(isAboutActive),
  },
]
---

<nav
  aria-label="Site Navigation"
  class:list={[
    'mb-10.5 text-3.6 font-semibold leading-2.45em font-navbar',
    'lg:(uno-desktop-column text-4 bottom-[min(9.04rem+3.85vw,12.5rem)]) cjk:tracking-wide',
    isDarkness || isEmileMoselly ? 'hidden lg:block' : '',
  ]}
>
  <ul>
    {navItems.map(item => (
      <li>
        <a
          href={getLocalizedPath(item.href)}
          class={item.className}
        >
          {item.label}
        </a>
      </li>
    ))}
  </ul>
</nav>
